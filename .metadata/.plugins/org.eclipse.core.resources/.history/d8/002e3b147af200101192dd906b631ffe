package exam;

public class ArithmaticQuiz4 {

	public static void main(String[] args) {
		int subjectA = 100;
		int subjectB = 80;
		int subjectC = 95;
		int subjectD = 68;
		
		int totalScore = subjectA + subjectB + subjectC + subjectD; // 모든 과목들의 합
		double average = (double)totalScore / 4; // 평균점수
		double score = Math.round((average - 55) * 10) / (double)100; // 4.5 만점 기준 학점 계산. 소숫점 이하 두자리까지
		//Math.round((average - 55) * 10) / 100;				  // (평균점수 - 55) 에서 소수점 계산
		System.out.println(Math.round((average - 55) * 10));
		System.out.println("점수 총합: " + totalScore);
		System.out.println("점수 평균: " + average);
		System.out.println("학점 결과: " + score);
	}

}
