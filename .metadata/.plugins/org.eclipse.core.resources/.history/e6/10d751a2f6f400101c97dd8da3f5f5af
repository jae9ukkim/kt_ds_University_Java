package exam;

import java.util.Scanner;

public class Q2439 {

	public static void main(String[] args) {
		Scanner keyboard = new Scanner(System.in);
		int n = keyboard.nextInt();
		int i = 1;
		
		while(true) {
			int j = 1;
			while(true) {
				System.out.print(" ");
				if(j++ == i-j) {
					break;
				}
			}
			while(true) {
				System.out.print("*");
				if(j++ == i) {
					break;
				}
			}
			System.out.println();
			if(i++ == n) {
				break;
			}
		}

	}

}
